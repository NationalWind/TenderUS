generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Account {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  password String
  email    String?
  phone    String?
  role     Role
  FCMRegToken String?
}

model Like {
  doc_id   String  @id @default(auto()) @map("_id") @db.ObjectId
  id       String
  likedID  String

  @@unique([id, likedID])
}

model Pass_A {
  doc_id    String  @id @default(auto()) @map("_id") @db.ObjectId
  id        String
  passedID  String

  @@unique([id, passedID])
}

model Message {
  doc_id     String  @id @default(auto()) @map("_id") @db.ObjectId
  sender     String
  receiver   String
  msgID      Int
  msgType    String
  content    String
  createdAt  DateTime

  @@unique([sender, receiver, msgID(sort: Desc)])
}