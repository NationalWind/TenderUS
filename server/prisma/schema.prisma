generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Account {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String  @unique
  password String
  email    String?
  phone    String?
  role     Role
  FCMRegToken String?
  avatarIcon String?
}

model Profile {
  doc_id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username        String   @unique
  pictures        String[]
  description     String

  longitude       Float
  latitude        Float

  identity        String
  age             Int
  interests       String[]
}

model Preference {
  doc_id          String   @id @default(auto()) @map("_id") @db.ObjectId
  username        String   @unique
  ageMin          Int
  ageMax          Int
  maxDist         Float
  showMe          String
}


model Like {
  doc_id   String  @id @default(auto()) @map("_id") @db.ObjectId
  id       String
  likedID  String

  @@unique([id, likedID])
}

model Pass_A {
  doc_id    String  @id @default(auto()) @map("_id") @db.ObjectId
  id        String
  passedID  String

  @@unique([id, passedID])
}

model Match {
  doc_id    String  @id @default(auto()) @map("_id") @db.ObjectId
  id1       String
  id2       String
  createdAt DateTime

  @@unique([id1, id2])
}

model Message {
  doc_id     String  @id @default(auto()) @map("_id") @db.ObjectId
  sender     String
  receiver   String
  msgID      Int
  msgType    String
  content    String
  createdAt  DateTime

  @@unique([sender, receiver, msgID(sort: Desc)])
}